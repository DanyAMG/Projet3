@model P3AddNewFunctionalityDotNetCore.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = Localizer["CreatProductTitle"];
    Layout = "_AdminLayout";
}

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Create" method="post">
    <div class="mb-3 col-6">
        <label>@Localizer["Name"]*:</label>
        <input asp-for="Name" class="form-control" />
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3 col-4">
        <label>@Localizer["Price"]*:</label>
        <input asp-for="Price" class="form-control" />
        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3 col-8">
        <label>@Localizer["Description"]:</label>
        <input asp-for="Description" class="form-control" />
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3 col-4">
        <label>@Localizer["Stock"]*:</label>
        <input asp-for="Stock" type="text" class="form-control" />
        @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3 col-8">
        <label>@Localizer["Details"]:</label>
        <input asp-for="Details" class="form-control" />
        @Html.ValidationMessageFor(m => m.Details, "", new { @class = "text-danger" })
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="@Localizer["OK"]" />
    </div>
</form>
